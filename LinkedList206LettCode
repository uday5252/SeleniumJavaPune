package com.abc.demo;

import java.util.Stack;

class Nodee
{
	int val;
	Nodee next;
	
	public Nodee(int val)
	{
		this.val = val;
	}
}

public class Fifth {

	public static void main(String[] args) {
		
		Stack<Integer> s = new Stack<Integer>(); 
		
		Nodee head = new Nodee(10);
		Nodee second = new Nodee(20);
		Nodee third = new Nodee(30);
		Nodee fourth = new Nodee(40);
		
		head.next = second;
		second.next = third;
		third.next = fourth;
		
		Nodee currentNode = head;
		
		while(currentNode != null)
		{
			s.push(currentNode.val);
			System.out.print(currentNode.val+"=>");
			currentNode = currentNode.next;
		}
		System.out.print("null");
		
		Nodee reversedNode = new Nodee(0);
		Nodee current = reversedNode;
		
		while(!s.isEmpty())
		{
//			read the values
			Nodee nodeInfo = new Nodee(s.pop());
			current.next = nodeInfo;
			current = current.next;
		}
		
		System.out.println("----------------");
		
		
		reversedNode = reversedNode.next;
		
		while(reversedNode != null)
		{
			
			System.out.print(reversedNode.val+"=>");
			reversedNode = reversedNode.next;
		}
		System.out.print("null");
		
		
		
	}

}
