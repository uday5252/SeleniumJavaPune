// const data = [ { -- }, { -- }, { -- }]


const btn = document.querySelector("button")
const input = document.querySelector("input")
const ol = document.querySelector("ol")

let alltasks = []

btn.addEventListener("click", function()
{
    // LOGIC 
    let enteredTask = input.value
    alltasks.push(enteredTask)

    localStorage.setItem("myTasks", JSON.stringify(alltasks))
    
    // from the local storage ==> read those tasks will be kept inside
    // the li tag and that li tag will be appended to the ol tag
    const taskArr = 
    JSON.parse(localStorage.getItem("myTasks")) // '[ ............. ]'

    // console.log(taskArr) ['dancing', 'playing']

    for(let i of taskArr)
    {

        const myLi = document.createElement("li")
        myLi.textContent = i
        ol.remove()
        ol.append(myLi)
    }

    input.value = ""
})











