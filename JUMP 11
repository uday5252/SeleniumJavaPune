package firstprojectt;

public class Jump11 {

	public static void main(String[] args) {
		int[] data = {2,3,1,1,4};
		
		int farthest = 0;//7
		int noOfJumps = 0; //4
		int lastElementIndex = 0;//7
		
		for(int i = 0; i < data.length - 1; i++)
		{
			farthest = Math.max(farthest, 
					i + data[i]); //farthest = 2(1)
//			farthest = 12
			
			if(i == lastElementIndex)
			{
				noOfJumps++;
				lastElementIndex = farthest;
			}
		}
		
		
		System.out.println(noOfJumps);
		
	}

}
