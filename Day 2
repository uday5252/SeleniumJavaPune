
const btn = document.querySelector("button")
const input = document.querySelector("input")
const ol = document.querySelector("ol")


function loadTasks()
{
    if(localStorage.getItem("myTasks") != null)
    {
            const myArr = JSON.parse(localStorage.getItem("myTasks"))
            for(let i of myArr)
            {
                const myLi = document.createElement("li")
                myLi.textContent = i
                ol.append(myLi)
            }
    }

    
}

loadTasks()


let alltasks = []

btn.addEventListener("click", function()
{
    // LOGIC 
    let enteredTask = input.value
    alltasks.push(enteredTask)

    localStorage.setItem("myTasks", JSON.stringify(alltasks))
    
    // from the local storage ==> read those tasks will be kept inside
    // the li tag and that li tag will be appended to the ol tag
    const taskArr = 
    JSON.parse(localStorage.getItem("myTasks")) // '[ ............. ]'

    // console.log(taskArr) ['dancing', 'playing']
    
    ol.textContent = ""
    for(let i of taskArr)
    {
        const myLi = document.createElement("li")
        // myLi.textContent = `${i}<button>Delete</button>` 
        myLi.innerHTML = `${i}<i class="fa-solid fa-trash"></i>` 
        ol.append(myLi)
        
        const deleteIcn = myLi.querySelector("i")
        deleteIcn.addEventListener("click", function()
        {
            myLi.remove()
        })
    }

    input.value = ""

<html>
    <head>
        <title>First HTML Document</title>
